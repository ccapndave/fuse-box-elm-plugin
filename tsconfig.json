{
  "compilerOptions": {
      "target": "es6",
      "moduleResolution": "node",
      "module": "commonjs",
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "rootDir": "src/",
      "outDir": "dist/",
      "sourceMap": true
  },
  "include": [
      "src/**/*"
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ]
}